<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <!-- Scrollable Log Output -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"
        android:background="@drawable/rounded_log_background"
        android:padding="8dp">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiting for dataâ€¦\nEnsure permissions are granted and location is enabled."
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:textColor="@android:color/white"
            android:textIsSelectable="true" />
    </ScrollView>

    <!-- Horizontal Checkbox Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp"
        android:weightSum="5">

        <CheckBox
            android:id="@+id/captureDownloadRateCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="DL"
            android:textSize="12sp"
            android:padding="0dp" />

        <CheckBox
            android:id="@+id/capturePingTestCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="Ping"
            android:textSize="12sp"
            android:padding="0dp" />

        <CheckBox
            android:id="@+id/captureSmsTestCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="SMS"
            android:textSize="12sp"
            android:padding="0dp" />

        <CheckBox
            android:id="@+id/captureDnsTestCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="DNS"
            android:textSize="12sp"
            android:padding="0dp" />

        <CheckBox
            android:id="@+id/captureUploadRateCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="0dp"
            android:text="UL"
            android:textSize="12sp"
            android:padding="0dp" />
    </LinearLayout>
    <!-- Start/Stop Button -->
    <Button
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue_500"
        android:layout_marginTop="8dp"
        app:cornerRadius="8dp" />

</LinearLayout>
